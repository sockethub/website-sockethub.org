<ul class="news">
    {{#each news}}
        {{#if (toDisplay)}}
            <li class="h-entry news-entry">
                <div class="header">
                    <span class="date dt-published">{{getYear this.date}}.{{getMonth this.date}}.{{getDay this.date}}</span>
                    <h3 class="news-title p-name">{{this.title}}</h3>
                </div>
                <div class="entry-content e-content">
                    {{{this.contents}}}
                </div>
                <div class="hidden p-author h-card">
                    <span class="p-name">{{this.author}}</span>
                </div>
            </li>
        {{/if}}
    {{/each}}
</ul>